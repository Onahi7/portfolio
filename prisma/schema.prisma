// Add this model to your existing schema.prisma file

model ExternalTraining {
  id            String   @id @default(cuid())
  title         String
  description   String
  organizerName String
  organizerEmail String
  organizerPhone String?
  website       String?
  startDate     DateTime
  endDate       DateTime
  location      String
  mode          String   // "online", "in-person", "hybrid"
  price         Float
  currency      String   @default("NGN")
  imageUrl      String?
  featured      Boolean  @default(false)
  approved      Boolean  @default(false)
  paymentStatus String   @default("pending") // "pending", "paid", "refunded"
  paymentReference String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  views     EventView[]
  clicks    EventClick[]
}

model EventView {
  id        String   @id @default(cuid())
  eventId   String
  event     ExternalTraining @relation(fields: [eventId], references: [id], onDelete: Cascade)
  ip        String?
  userAgent String?
  referer   String?
  timestamp DateTime @default(now())

  @@index([eventId])
}

model EventClick {
  id        String   @id @default(cuid())
  eventId   String
  event     ExternalTraining @relation(fields: [eventId], references: [id], onDelete: Cascade)
  target    String   // e.g., "website", "contact", "register"
  ip        String?
  userAgent String?
  timestamp DateTime @default(now())

  @@index([eventId])
}

model AdminAction {
  id        String   @id @default(cuid())
  action    String   // e.g., "event_approved", "event_rejected", "event_deleted"
  metadata  Json?    // Additional data about the action
  timestamp DateTime @default(now())
}

